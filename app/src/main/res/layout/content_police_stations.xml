<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_police_stations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/police_stations_hexagon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/police_hat_hex" />

        <Spinner
            android:id="@+id/police_station_name_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:background="@color/toolbar_gray"
            android:paddingEnd="@dimen/spinner_padding_horizontal"
            android:paddingStart="@dimen/spinner_padding_horizontal"
            android:textAlignment="center" />

    </TableRow>

    <TableRow>

        <View android:layout_span="2"
            android:id="@+id/ps_details_table_layout_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>
</TableLayout>